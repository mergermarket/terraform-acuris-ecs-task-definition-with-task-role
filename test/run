#!/bin/bash

set -euo pipefail

clean() {
    rm -rf .terraform/
    find . -type d -name __pycache__ | xargs rm -rf
}

trap clean EXIT

repo_dir=$(git rev-parse --show-toplevel)
name=$(basename $repo_dir)-test

docker build -t $name $repo_dir/test

docker run \
    --name $name \
    --rm \
    -i $(tty -s && echo -t) \
    -w $repo_dir \
    -v $repo_dir:$repo_dir \
    $name \
        py.test \
        --tb=short \
        "$@"
